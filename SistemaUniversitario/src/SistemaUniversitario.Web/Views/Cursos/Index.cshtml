@model IEnumerable<SistemaUniversitario.Application.DTOs.CursoDTO>

@{
    ViewData["Title"] = "Lista de Cursos";
}

<div class="container mt-4">
    <h1>Cursos</h1>

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">Novo Curso</a>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">üîç</span>
                <input type="text" id="campoBusca" class="form-control" placeholder="Buscar curso por nome ou descri√ß√£o..." aria-label="Buscar" aria-describedby="basic-addon1" />
            </div>
        </div>
    </div>

    <div id="tabelaContainer">
        <partial name="_TabelaCursos" model="Model" />
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Evento acionado quando o usu√°rio digita
            $("#campoBusca").on("keyup", function () {
                var valor = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("BuscarCursos", "Cursos")',
                    data: { termo: valor },
                    success: function (result) {
                        $("#tabelaContainer").html(result);
                    },
                    error: function(err) {
                        console.error("Erro na busca:", err);
                    }
                });
            });
        });
    </script>
}